.card-panel
  .container
    %h4.light-blue-text.center 会員登録

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .row
        .col.s12
          = f.label "ニックネーム"
          = f.text_field :nickname, autofocus: true, required: "", maxlength: User::NICKNAME_MAXIMUM_LENGTH, data: { length: User::NICKNAME_MAXIMUM_LENGTH }

      .row
        .col.s12
          = f.label "メールアドレス"
          = f.email_field :email, required: ""

      .row
        .col.s12
          = f.label "パスワード"
          = f.password_field :password, autocomplete: "off", required: ""
      .row
        .col.s12
          = f.label "もう一度パスワードを入力してください"
          = f.password_field :password_confirmation, autocomplete: "off", required: ""
      .row
        .col.s6
          = f.label "生年月日（任意）"
          = f.text_field :birthday, class: "datepicker validate cursor-pointer", id: "js-birthday-picker"

        .col.s6
          = f.label "性別（任意）"
          = f.select :sex, User::SEX_OPTIONS, include_blank: true

      .row
        .col.s12
          = f.label "自己紹介文（任意）"
          = f.text_area :introduction, class: "materialize-textarea validate", maxlength: User::INTRODUCTION_MAXIMUM_LENGTH, data: { length: User::INTRODUCTION_MAXIMUM_LENGTH }
      .row
        .col.s12
          = f.button "登録する", class: "btn light-blue right waves-effect waves-light"

    = render "devise/shared/links"
