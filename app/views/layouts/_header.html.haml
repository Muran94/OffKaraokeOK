.navbar-fixed
  %nav.white{:role => "navigation"}
    .nav-wrapper.container
      = link_to root_path, id: "logo-container", class: "brand-logo" do
        = image_tag("logo_transparent_background.png", alt: "OFF KARA", height: 60)

      %ul.right.hide-on-med-and-down
        %li{class: current_page_article_index_page? ? "active" : ""}= link_to "記事一覧", articles_path

        - if current_user # ログイン中であれば
          %li{class: current_page_article_new_page? ? "active" : ""}= link_to "記事投稿", new_article_path
          %li{class: current_page_my_page? ? "active" : ""}= link_to "マイページ", my_page_profile_path
        - else # ログインしていなければ
          %li{class: current_page_user_registration_page? ? "active" : ""}= link_to "会員登録", new_user_registration_path
          %li{class: current_page_user_login_page? ? "active" : ""}= link_to "ログイン", new_user_session_path

      %ul#nav-mobile.side-nav
        %li= link_to "記事一覧", articles_path

        - if current_user # ログイン中であれば
          %li= link_to "記事投稿", new_article_path
          %li= link_to "マイページ", my_page_profile_path
        - else # ログインしていなければ
          %li= link_to "会員登録", new_user_registration_path
          %li= link_to "ログイン", new_user_session_path

      %a.button-collapse.right{"data-activates" => "nav-mobile", :href => "#"}
        %i.material-icons.grey-text menu
